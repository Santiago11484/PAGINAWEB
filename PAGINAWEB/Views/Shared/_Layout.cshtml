    <section>
        <h2 class="text-center titulo">
            Bienvenido a The Burger Company
        </h2>
        <!--CAROUSEL-->
        <div class="pic-ctn text-center">
            <img src="https://d1uz88p17r663j.cloudfront.net/original/bdac88d2b4d50e34c11b0e4c156c492b_Hamburguesa_con_queso.jpg" alt="foto del local de palermo soho" class="pic">
